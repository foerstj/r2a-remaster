[t:0x040c,n:text]
{
    // Intro
	[0x0000]
	{
		from = " ";
		to = " ";
	}
	[0x0000]
	{
		from = "With the passing of the Shadowjumper, the Hero of Arhok returned, and peace descended upon the town.";
		to = "Avec la fin du Shadowjumper, le héros retourna à Arhok et la paix tomba sur la ville.";
	}
	[0x0000]
	{
		from = "But the Staff of Stars was judged too powerful to remain in the land, and too dangerous to destroy.";
		to = "Mais le Bâton des Étoiles était trop puissant pour rester sur terre et trop dangereux pour être détruit.";
	}
	[0x0000]
	{
		from = "In a final selfless act, the Hero of Arhok agreed to be frozen - along with the Staff - into a Great Statue to watch over the town should trouble ever return.";
		to = "Dans un dernier acte altruiste, le héros d'Arhok a accepté d'être figé dans une statue - avec le bâton - pour surveiller la ville en cas de retour des difficultés.";
	}
	[0x0000]
	{
		from = "Now foul creatures have returned to ravage the lands outside Arhok. Though a few brave souls have journeyed beyond the town's gates, none have returned.";
		to = "Désormais, des créatures corrompues ravagent à nouveau les terres à l'extérieur d'Arhok. Quelques âmes courageuses ont quitté les portes de la ville, mais personne n'est revenu.";
	}
	[0x0000]
	{
		from = "The time has come for the Protector of Arhok to awaken.";
		to = "Le moment est venu pour le protecteur d’Arhok de se réveiller.";
	}

    // Moht
	[0x0000]
	{
		from = "Welcome, hero! We have need of you again. Attacks on our town in the dark of night have killed several townspeople, and now our beloved Mayor, Hardison Dohn, has gone missing. No one is sure what is happening. Rowan has taken over the mayoral duties for now. I suspect you are our best hope for defense.\n\nThe spell that held you in stasis destroyed the Staff of Stars, and even drained some of your life force. I hope you will train before you leave town.\n\nI have saved some money and resurrection scrolls to give to you. It's not much, but perhaps it will help you.";
		to = "Bienvenue, ô héros ! Nous avons encore besoin de vous. Les attaques contre notre ville par une nuit noire ont tué plusieurs habitants et notre bien-aimé maire, Hardison Dhon, a disparu. Personne ne sait ce qui s'est passé. Rowan a pour l'instant assumé les fonctions de maire. Je soupçonne que vous êtes notre meilleur espoir de défense.\n\nLe sort qui vous a maintenu gelé a détruit le bâton des étoiles et a également vidé une partie de votre force vitale. J'espère que vous suivrez une formation avant de quitter la ville.\n\nJ'ai économisé de l'argent et des parchemins de résurrection pour vous les offrir. Ce n'est pas grand-chose, mais peut-être que cela vous aidera.";
	}
	[0x0000]
	{
		from = "You should go speak to Rowan. He will tell you of our plight.";
		to = "Tu devrais parler à Rowan. Il vous informera de notre sort.";
	}
	[0x0000]
	{
		from = "Off on another adventure? The woods are crawling with evil creatures these days. Be sure to talk to Kiira at the mage's guild before you leave town.";
		to = "Vous partez pour une nouvelle aventure ? Les forêts regorgent de créatures maléfiques de nos jours. Assurez-vous de parler à Kiira à la Guilde des Mages avant de quitter la ville.";
	}
	[0x0000]
	{
		from = "Off on another adventure? The woods are crawling with evil creatures these days. Be sure to talk to Kiira at the mage's guild before you leave town.\n\nI have saved some money and resurrection scrolls to give to you. It's not much, but perhaps it will help you.";
		to = "Vous partez pour une nouvelle aventure ? Les forêts regorgent de créatures maléfiques de nos jours. Assurez-vous de parler à Kiira à la guilde des mages avant de quitter la ville.\n\nJ'ai économisé de l'argent et des parchemins de résurrection à vous offrir. Ce n'est pas grand-chose, mais peut-être que cela vous aidera.";
	}
	[0x0000]
	{
		from = "I know everyone thinks it's the Hassat that are attacking, but I never thought they were that bad.";
		to = "Je sais que tout le monde pense que ce sont les Hassats qui nous attaquent, mais je n'ai jamais pensé qu'ils étaient si mauvais.";
	}
	[0x0000]
	{
		from = "I know everyone thinks it's the Hassat that are attacking, but I never thought they were that bad. \n\nI have saved some money and resurrection scrolls to give to you. It's not much, but perhaps it will help you.";
		to = "Je sais que tout le monde pense que ce sont les Hassats qui nous attaquent, mais je n'ai jamais pensé qu'ils étaient si mauvais.\n\nJ'ai économisé de l'argent et des parchemins de résurrection pour vous les donner. Ce n'est pas grand-chose, mais peut-être que cela vous aidera.";
	}
	[0x0000]
	{
		from = "Well done! Another surpassing good adventure, I'd say!";
		to = "Bien joué! Encore une aventure exceptionnelle, je dirais !";
	}

    // Guard 1
	[0x0000]
	{
		from = "These gates are locked, my friend. Several have left without returning. Each night we are beset by beasts. No one has seen them; they may lurk outside even now!";
		to = "Ces portes sont verrouillées, mon ami. Plusieurs sont sortis sans revenir. Chaque nuit, nous sommes hantés par des bêtes. Personne ne l'a vue ; ils pourraient se cacher là-bas en ce moment !";
	}
	[0x0000]
	{
		from = "You look like you can handle yourself. Good luck out there.";
		to = "Vous avez l'air de pouvoir prendre soin de vous. Bonne chance là-bas.";
	}
	[0x0000]
	{
		from = "You showed them Zaurask a thing or two!";
		to = "Eh bien, vous l'avez montré aux Zaurasks !";
	}

    // Guard 2
	[0x0000]
	{
		from = "I don't think you should go this way... the problems seem to be coming from the North.";
		to = "Je ne pense pas que vous devriez suivre cette voie... les problèmes semblent venir du nord.";
	}
	[0x0000]
	{
		from = "Just doing my job. I won't open the gate. You can stop trying.";
		to = "Je fais juste mon travail ici. Je n'ouvrirai pas la porte. Vous pouvez arrêter de demander.";
	}
	[0x0000]
	{
		from = "I know everyone says you rescued us and all, but I still won't open this gate.";
		to = "Je sais que tout le monde dit que tu nous as sauvés et tout, mais je n'ouvrirai toujours pas la porte.";
	}

    // Guard 3
	[0x0000]
	{
		from = "Rowan has ordered this path closed. Our troubles are not beyond here. I warrant you will find plenty of action elsewhere.";
		to = "Sur ordre de Rowan, ce passage est fermé. Nos difficultés ne viennent pas d'ici. Je suppose que vous trouverez beaucoup d'action ailleurs.";
	}
	[0x0000]
	{
		from = "This isn't the way you want to go.";
		to = "Ce n’est pas la voie que vous souhaitez suivre.";
	}

    // Rowan
	[0x0000]
	{
		from = "So, you are the famous hero of Arhok? You don't look so impressive to me. Still, the townspeople have faith in you, and you saved them once before. Kiira tells me the stasis spell has reduced your skills; she has scrolls to help you.\n\nThe town is under attack, and I know it is those vile Hassat. My predecessor, Hardison, did little to bolster the town's defenses, and now we are nearly helpless against these ferocious scavengers. We have no idea why they are attacking us, but they must be stopped before they destroy the town.";
		to = "Alors vous êtes le célèbre héros d'Arhok ? Vous n'avez pas l'air si impressionnant. Quoi qu’il en soit, les habitants croient en vous et vous les avez déjà sauvés. Kiira me dit que le sort Stasis a réduit vos capacités ; elle a des parchemins pour vous aider.\n\nLa ville est attaquée, et je sais que ce sont ces ignobles Hassats. Mon prédécesseur, Hardison, n'a pas fait grand-chose pour renforcer les défenses de la ville, et maintenant nous sommes pratiquement impuissants face à ces maraudeurs sauvages. Nous n'avons aucune idée de la raison pour laquelle ils nous attaquent, mais il faut les arrêter avant qu'ils ne détruisent la ville.";
	}
	[0x0000]
	{
		from = "Before you leave town, be sure to talk to Kiira.";
		to = "Avant de quitter la ville, assurez-vous de parler à Kiira.";
	}
	[0x0000]
	{
		from = "Kiira seems to have helped you. Take the North gate out of town. That's where those mangy cats are coming from.";
		to = "Kiira semble vous avoir aidé. Quittez la ville par la porte nord. C'est de là que viennent ces chats galeux.";
	}
	[0x0000]
	{
		from = "The North gate is the way to go... that's where the Hassat seem to be coming from.";
		to = "La Porte Nord est la bonne direction... c'est de là que semblent venir ces Hassats.";
	}

    // Lharnob
	[0x0000]
	{
		from = "Thank the heavens that the world has heroes such as you. So tell me�what will your next adventure be?";
		to = "Dieu merci pour les héros comme vous. Quelle est la prochaine aventure ?";
	}

    // Kiira
	[0x0000]
	{
		from = "I have a gift for you, but Rowan insists that you speak to him first.";
		to = "J'ai un cadeau pour toi, mais Rowan insiste pour que tu lui parles d'abord.";
	}
	[0x0000]
	{
		from = "I know you sacrificed the Staff of Stars for the greater good of Ehb, and I'm grateful. Having some skill in the arts, I have prepared four scrolls to aid you. Each will grant you knowledge and skill in the discipline of your choosing. Choose the skill you wish aid in carefully, for I have only enough mana to imbue a single scroll. ";
		to = "Je sais que vous avez sacrifié le Bâton des Étoiles pour le bien d'Ehb, et je vous en suis reconnaissant. Grâce à mes arts, j'ai préparé quatre parchemins pour vous aider. Chacun vous apportera des connaissances et des compétences dans la discipline de votre choix. Choisissez soigneusement la compétence pour laquelle vous souhaitez obtenir de l'aide, car mon mana est suffisant pour imprégner un seul parchemin.";
	}
	[0x0000]
	{
		from = "You may choose any one of these scrolls. Choose wisely!";
		to = "Vous pouvez choisir l'un de ces parchemins. Choisissez judicieusement !";
	}
	[0x0000]
	{
		from = "Have you any need of spells or potions?";
		to = "Avez-vous besoin de sorts ou de potions ?";
	}
	[0x0000]
	{
		from = "Once again, you have saved us.";
		to = "Une fois de plus, vous nous avez sauvés.";
	}

    // Raab
	[0x0000]
	{
		from = "An honest man can't even make a living any more. why, my mules all ran off after those beasts attacked the town last time. I never even saw what happened.";
		to = "De nos jours, on ne peut plus gagner sa vie en honnête homme. Écoutez, mes mules se sont toutes enfuies la dernière fois que ces bêtes ont ravagé la ville. Je ne l'ai même pas vu arriver.";
	}
	[0x0000]
	{
		from = "I still don't trust the Hassat, because my mules don't trust them.";
		to = "Je ne fais toujours pas confiance à ces Hassats car mes mules ne leur font toujours pas confiance non plus.";
	}

    // Phelan
	[0x0000]
	{
		from = "These things were working a minute ago, I swear they were. If I could just get a single quiet minute to decipher these runes...";
		to = "Ces choses fonctionnaient il y a une minute, je le jure. Si seulement j'avais un moment de calme pour déchiffrer ces runes...";
	}
	[0x0000]
	{
		from = "I should be in my lab.";
		to = "J'aurais aimé être dans mon laboratoire.";
	}
	[0x0000]
	{
		from = "What is it now?";
		to = "Quoi d'autre maintenant ?";
	}

    // Francesca
	[0x0000]
	{
		from = "I never did trust that Rowan. He took charge too suddenly after Hardison vanished. Still, if he asked Moht to wake you, he can't be all bad.";
		to = "Je n'ai jamais fait confiance à ce Rowan. Il a pris le relais trop rapidement après la disparition d'Hardison. Pourtant, s'il a demandé à Moht de vous réveiller, il ne peut pas être si méchant.";
	}
	[0x0000]
	{
		from = "Be careful. As my Mum used to say: 'You cant judge a sword by its sheath.'";
		to = "Sois prudent. Comme ma mère le disait toujours : « On ne peut pas juger une épée par son fourreau.'";
	}

    // Raschel
	[0x0000]
	{
		from = "The world is a better place with those like you in it. Thank you.";
		to = "Le monde est meilleur avec des gens comme vous. Merci.";
	}

    // Saul
	[0x0000]
	{
		from = "I would travel with you, but you don't appear ready. Speak to Kiira.";
		to = "Je voyagerais avec toi, mais tu ne sembles pas encore prêt. Parlez à Kiira.";
	}
	[0x0000]
	{
		from = "I know that you have sacrificed your skills and life for this town, with little enough thanks.  I, for one, want to help, but I have some debts I must resolve before I can in good conscience leave this town. Help me take care of them, and I will be your loyal companion.";
		to = "Je sais que vous avez sacrifié vos compétences et vos vies pour cette ville sans grand merci. J'aimerais vous aider, mais j'ai des dettes que je dois payer avant de pouvoir quitter la ville en toute bonne conscience. Aide-moi à payer et je serai ton fidèle compagnon.";
	}
	[0x0000]
	{
		from = "Thank you, kind sir. I am at your service.";
		to = "Merci beaucoup, cher monsieur. Je suis à votre service.";
	}
	[0x0000]
	{
		from = "I'm sorry, I can't join you before taking care of my debts.";
		to = "Je suis désolé, je ne peux pas venir avec toi tant que je n'ai pas remboursé ma dette.";
	}
	[0x0000]
	{
		from = "As you wish. I will wait here in case you change your mind.";
		to = "Comme vous le souhaitez. J'attendrai ici au cas où tu changerais d'avis.";
	}
	[0x0000]
	{
		from = "A change of heart? Excellent. I will be a first rate adventurer.";
		to = "Avez-vous changé d'avis ? Excellent. Je serai un excellent aventurier.";
	}

    // Erin
	[0x0000]
	{
		from = "I'd love to get out of this town, and I'm handy with a bow, but you don't look like you can handle yourself out there.";
		to = "J'adorerais sortir de cette ville, et je sais utiliser un arc, mais tu n'as pas l'air de pouvoir te débrouiller là-bas.";
	}
	[0x0000]
	{
		from = "Nothing ever happens in this town. I wish I had a grand adventure to go on. I'll go with you for a price.";
		to = "Il ne se passe jamais rien ici. J'aimerais pouvoir vivre une grande aventure. Pour de l'argent, je viendrai avec toi.";
	}
	[0x0000]
	{
		from = "Great! Thanks for the gold. Now let's get going.";
		to = "Bon! Merci pour l'or. Maintenant, allons-y.";
	}
	[0x0000]
	{
		from = "Whatever. I'm still bored, and you're still rich.";
		to = "Cependant. Je m'ennuie toujours et tu es toujours riche.";
	}
	[0x0000]
	{
		from = "Too bad you don't have enough money. I'll try to hide my disappointment.";
		to = "Dommage que tu n'aies pas assez d'argent. Je vais essayer de cacher ma déception.";
	}
	[0x0000]
	{
		from = "Oh, man! Just when I was starting to have a good time!";
		to = "Oh mec ! Juste au moment où je commençais à m'amuser !";
	}
	[0x0000]
	{
		from = "Good thinking. You probably can't make it without me.";
		to = "Bonne décision. Vous ne pourrez probablement pas le faire sans moi.";
	}

    // Kron
	[0x0000]
	{
		from = "I remember you! Kiira told me she was going to make some scrolls for you.";
		to = "Je me souviens de vous! Kiira m'a dit qu'elle voulait faire des parchemins pour toi.";
	}
	[0x0000]
	{
		from = "You helped me out a while back, and I haven't forgotten. I've been studying. Enough trapping for me, I said. If that young one can go off on a grand adventure, I reckon I can too. I'd join you too, but who will send money to my poor invalid parents in Smithee? I have to think of them, you know.";
		to = "Vous m'avez aidé une fois et je ne l'ai pas oublié. J'ai étudié. Assez de piégeage, me suis-je dit. Si ce garçon peut vivre une grande aventure, alors moi aussi. Moi aussi, je viendrais avec toi, mais qui enverrait de l'argent à mes parents pauvres et malades à Schmieding ? Je dois aussi penser à elle, tu sais.";
	}
	[0x0000]
	{
		from = "Excellent. I can do more than trap critters now. I can fry 'em!";
		to = "Merveilleux. Je peux désormais faire plus que simplement tendre des pièges aux bêtes. Je peux les griller !";
	}
	[0x0000]
	{
		from = "Fine then, no skin off my nose. I'll just join the next group of adventurers that comes by.";
		to = "C'est bon, je m'en fiche. Je vais juste rejoindre le prochain groupe d'aventuriers qui passera.";
	}
	[0x0000]
	{
		from = "I have to make sure my parents are taken care of. Come back when you have more gold.";
		to = "Je dois m'assurer que mes parents sont pris en charge. Revenez quand vous aurez plus d'or.";
	}
	[0x0000]
	{
		from = "I wanted to go back and sit in my shack anyway.";
		to = "De toute façon, je voulais retourner m'asseoir dans ma cabane.";
	}
	[0x0000]
	{
		from = "I'll help, but why don't you make up your mind?";
		to = "Je suis heureux de vous aider, mais pourriez-vous prendre une décision ?";
	}
	[0x0000]
	{
		from = "Bah! Who needs you! I can take care of myself.";
		to = "Bah ! De toute façon, qui a besoin de toi ? Je peux prendre soin de moi.";
	}

    // Syrd
	[0x0000]
	{
		from = "Too long was my mind clouded by the evil of the island... Thank you, my friend! Thank you... your parents would be proud. Your courage and bravery mark you as a true hero.";
		to = "Depuis trop longtemps, mon esprit est obscurci par le mal de l'île... Merci, mon ami ! Merci... tes parents seraient fiers. Votre courage et votre bravoure font de vous un véritable héros.";
	}

    // Reynard
	[0x0000]
	{
		from = "There's a storm moving in now; there's dark clouds to the west.";
		to = "Une tempête arrive ; des nuages ​​sombres se trouvent à l’ouest.";
	}
	[0x0000]
	{
		from = "You have acquitted yourself admirably.";
		to = "Vous vous êtes admirablement acquitté de votre tâche.";
	}

    // Boris
	[0x0000]
	{
		from = "My father says never to go on adventures with people who aren't experienced.";
		to = "Mon père dit : ne partez jamais à l'aventure avec des personnes inexpérimentées.";
	}
	[0x0000]
	{
		from = "I'm a good fighter! My dad says I can smash anything! You'll see! Can I come with you? There's just this little matter of my bar tab.";
		to = "Je suis un bon combattant ! Mon père dit que je peux tout écraser ! Tu verras ! Je peux venir avec toi ? Il y a juste ce petit problème de note au bar.";
	}
	[0x0000]
	{
		from = "Yes, I'm a really good fighter. You'll see.";
		to = "Oui, je suis un très bon combattant. Vous verrez.";
	}
	[0x0000]
	{
		from = "That makes Boris sad.";
		to = "Cela rend Boris triste.";
	}
	[0x0000]
	{
		from = "That tavern keeper is really mean! If I don't pay my bill, he won't let me leave.";
		to = "L'aubergiste ici est vraiment méchant ! Si vous ne payez pas mes dettes, il ne me laissera pas partir.";
	}
	[0x0000]
	{
		from = "That makes Boris sad. Will you come back someday?";
		to = "Cela rend Boris triste. Reviendrez-vous à un moment donné ?";
	}
	[0x0000]
	{
		from = "I'm ready to hurt things for you. Just tell me which ones.";
		to = "Je suis prêt à faire des choses pour toi. Dis-moi juste lesquelles.";
	}

    // Hassat
	[0x0000]
	{
		from = "Humans, although you come with weapons drawn, I tell you it is not our brothers that have attacked your town. Our enmity for the humans is ancient, but now we have a more pressing concern. Our lands have been wrenched from us by the scaly ones. New lizard creatures attack, and are fiercer and braver than before.\n\nWe are forced from our home, and many of us would fight. Our King has been taken from us by the leader of the Zaurask. If you can find him, perhaps you can persuade us not to take over your town as our new home.\n\nAs a token of our good will, Tareece will join you on your search.";
		to = "Peuple, même si vous venez chez nous les armes au poing, je vous le dis, ce ne sont pas nos frères qui ont attaqué votre ville. Notre hostilité envers l’humanité est ancienne, mais nous avons actuellement de plus grandes préoccupations. Nos terres nous ont été volées par les Écailleux. De nouvelles créatures lézards attaquent, plus féroces et plus audacieuses que jamais.\n\nNous avons été chassés de nos maisons et beaucoup d'entre nous se sont battus. Notre roi nous a été enlevé par le chef zaurasque. Si vous parvenez à le trouver, vous pourrez peut-être nous convaincre de ne pas faire de votre ville notre nouveau foyer.\n\nEn signe de notre bonne volonté, Tareece devrait vous accompagner dans votre quête.";
	}
	[0x0000]
	{
		from = "We will suffer your kind for a short time only. Save our King, or you will be sorry.";
		to = "Nous ne tolérerons votre sort que pour un court instant. Sauvez notre roi, ou vous le regretterez.";
	}
	[0x0000]
	{
		from = "We thank you. We shall return to our lands now. May our races exist together in peace.";
		to = "Nous vous remercions. Nous allons maintenant retourner dans notre pays. Que nos races vivent en paix.";
	}

    // Rowan
	[0x0000]
	{
		from = "Impressive. I didn't think you would get this far. You humans always seem to carry on longer than you should. When Raks awoke, he summoned me. The filthy Hassat kept our kind trapped in this fetid place, and Raks offered us a way out. We captured the Hassat King together, trapped him in Raks' lair below, and then Raks led the Zaurask Zombies against the Hassat. Without their King they were easy prey.\n\nNow we have our sights set on the human town, and we aren't going to let you stop us. Watch now, and prepare for your doom!";
		to = "Impressionnant. Je ne pensais pas que tu irais aussi loin. Vous, les humains, semblez rester sur votre tâche plus longtemps que ce qui est bon pour vous. Quand Raks s'est réveillé, il m'a convoqué. Le sale Hassat a piégé notre espèce dans cet endroit puant, et Raks nous a proposé une issue. Ensemble, nous avons kidnappé le roi Hassat, l'avons emprisonné dans l'antre de Raks en dessous de nous, puis Raks a mené les zombies zaurasques contre les Hassati. Sans leur roi, ils étaient des proies faciles.\n\nMaintenant, nous avons jeté notre dévolu sur la cité humaine, et nous ne vous laisserons pas nous arrêter. Maintenant, faites attention et préparez-vous à votre perte !";
	}

    // Hassat King
	[0x0000]
	{
		from = "You may return in peace to your town.";
		to = "Vous pouvez désormais regagner votre ville en toute tranquillité.";
	}
	[0x0000]
	{
		from = "You must kill Raks to free me.";
		to = "Vous devez tuer Raks pour me libérer.";
	}
	[0x0000]
	{
		from = "Thank you. You act nobly, even though you have the aspect of the cursed humans. Although I have often railed against your kind, perhaps time enough has passed for us to live together. I shall return to my lands and tell my subjects of your help and your valor, and perhaps sometime in the future we can stand in battle side by side.";
		to = "Je vous remercie. Vous agissez honorablement même si vous portez en vous l’aspect du peuple maudit. Bien que j'aie souvent critiqué votre race, peut-être que suffisamment de temps s'est écoulé pour que nous puissions vivre ensemble. Je retournerai dans mon pays et parlerai à mes sujets de votre aide et de votre héroïsme, et peut-être qu'un jour nous pourrons nous tenir côte à côte dans la bataille. »;
	}
}
